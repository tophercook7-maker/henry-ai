{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Henry AI Ultimate",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["$APP/**", "$RESOURCE/**"]
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ai.henry.ultimate",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../../api/*"],
      "externalBin": [],
      "copyright": "Â© 2025 Henry AI",
      "category": "Productivity",
      "shortDescription": "Henry AI - Your Ultimate Local AI Assistant",
      "longDescription": "Henry AI Ultimate is a powerful local AI assistant with natural conversation, document processing, cost tracking, and full file system access. Zero hosting costs - runs completely on your machine!",
      "deb": {
        "depends": ["nodejs"]
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Henry AI Ultimate",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1000,
        "minHeight": 700
      }
    ]
  }
}

